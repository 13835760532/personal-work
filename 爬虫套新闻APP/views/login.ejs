    <script src="http://localhost:8888/js/swiper.jquery.min.js"></script>
    <script src="http://localhost:8888/js/swiper.min.js"></script>
    <script src="http://localhost:8888/js/swiper.animate1.0.2.min.js"></script>
    <script src="http://localhost:8888/js/zepto.min.js"></script>
